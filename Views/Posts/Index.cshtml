@model List<MiniBlog.Models.Post>

@{
    ViewData["Title"] = "Список постов";
}

<h2>Список постов</h2>

<a asp-action="Create" class="btn btn-primary mb-3">Создать пост</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Заголовок</th>
            <th>Дата публикации</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@post.Id" class="btn btn-info btn-sm">Подробнее</a>
                    <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <form asp-action="Delete" asp-route-id="@post.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>